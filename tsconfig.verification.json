{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/services/storage": ["./scripts/mocks/storage"],
      "@/services/correspondence": ["./scripts/mocks/correspondence"],
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "scripts/**/*.ts",
    "store/**/*.ts",
    "types/**/*.ts",
    "hooks/**/*.ts",
    "services/**/*.ts"
  ]
}
